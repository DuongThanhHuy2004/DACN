@model DACN.Models.TbBlog

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <h1>Chi tiết bài viết</h1>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">@Model.Title</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Tiêu đề</dt>
                        <dd class="col-sm-9">@Model.Title</dd>
                        <dt class="col-sm-3">Danh mục</dt>
                        <dd class="col-sm-9">@Model.Category?.Title</dd>
                        <dt class="col-sm-3">Ảnh</dt>
                        <dd class="col-sm-9">
                            <img src="@Html.DisplayFor(modelItem => Model.Image)" width="200" hight="200" />
                        </dd>
                        <dt class="col-sm-3">Mô tả</dt>
                        <dd class="col-sm-9">@Model.Description</dd>
                        <dt class="col-sm-3">Chi tiết</dt>
                        <dd class="col-sm-9">@Html.Raw(Model.Detail)</dd>
                        <dt class="col-sm-3">Ngày tạo</dt>
                        <dd class="col-sm-9">@Model.CreatedDate</dd>
                        <dt class="col-sm-3">Người tạo</dt>
                        <dd class="col-sm-9">@Model.CreatedBy</dd>
                    </dl>
                    @if (Model.Status == 0)
                    {
                        <form asp-action="Approve" asp-route-id="@Model.BlogId" method="post" style="display:inline">
                            <button type="submit" class="btn btn-success">Duyệt</button>
                        </form>
                        <form asp-action="Reject" asp-route-id="@Model.BlogId" method="post" style="display:inline">
                            <button type="submit" class="btn btn-danger">Từ chối</button>
                        </form>
                    }
                    <a asp-action="Pending" class="btn btn-secondary">Quay lại</a>
                </div>
            </div>
        </div>
    </section>
</div>
