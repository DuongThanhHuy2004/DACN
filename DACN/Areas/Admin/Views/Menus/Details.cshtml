@model DACN.Models.TbMenu

@{
    ViewData["Title"] = "Chi tiết menu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <h1>Chi tiết menu</h1>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">@Model.Title</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Tiêu đề</dt>
                        <dd class="col-sm-9">@Model.Title</dd>
                        <dt class="col-sm-3">Alias</dt>
                        <dd class="col-sm-9">@Model.Alias</dd>
                        <dt class="col-sm-3">Mô tả</dt>
                        <dd class="col-sm-9">@Model.Description</dd>
                        <dt class="col-sm-3">Mức</dt>
                        <dd class="col-sm-9">@Model.Levels</dd>
                        <dt class="col-sm-3">Menu cha</dt>
                        <dd class="col-sm-9">@Model.ParentId</dd>
                        <dt class="col-sm-3">Vị trí</dt>
                        <dd class="col-sm-9">@Model.Position</dd>
                        <dt class="col-sm-3">Hiện</dt>
                        <dd class="col-sm-9">@Model.IsActive</dd>
                    </dl>
                    <a asp-action="Edit" asp-route-id="@Model.MenuId" class="btn btn-primary">Sửa</a>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </div>
        </div>
    </section>
</div>
