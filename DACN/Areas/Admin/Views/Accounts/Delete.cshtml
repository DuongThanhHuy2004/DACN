@model DACN.Models.TbAccount

@{
    ViewData["Title"] = "Xóa tài khoản";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <h1>Chi tiết tài khoản</h1>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">@Model.FullName</h3>
                </div>
                  <div class="card-body">
                    <dl class="row">
        <dt class="col-sm-2">Tên đăng nhập</dt>
        <dd class="col-sm-10">@Model.Username</dd>
        <dt class="col-sm-2">Họ tên</dt>
        <dd class="col-sm-10">@Model.FullName</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Quyền</dt>
        <dd class="col-sm-10">@Model.Role?.RoleName</dd>
                     </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="AccountId" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
			</div>
		</div>
	</section>
</div>